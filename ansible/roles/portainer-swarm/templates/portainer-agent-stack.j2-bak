version: '3.5'

services:
  agent:
    image: {{portainer_agent_app_image}}
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/lib/docker/volumes:/var/lib/docker/volumes
    networks:
      - {{portainer_network_name}}
    environment:
      AGENT_SECRET: {{portainer_agent_secret}}
    deploy:
      mode: global
      placement:
        constraints: [node.platform.os == linux]

  portainer:
    image: {{portainer_app_image}}
    command: "-H tcp://tasks.agent:9001 --tlsskipverify --bind :{{portainer_target_port}} --tunnel-port {{portainer_tunnel_port}} --target-password {{portainerpassword.stdout}}"
    ports:
      - "{{portainer_target_port}}:{{portainer_target_port}}"
      - "{{portainer_tunnel_port}}:{{portainer_tunnel_port}}"
    volumes:
      - {{portainer_volume_name}}:/data
    networks:
      - {{portainer_network_name}}
      - {{traefik_network_name}}
    environment:
      AGENT_SECRET: {{portainer_agent_secret}}
    deploy:
      labels:
        - "traefik.enable=true"
        - "traefik.http.routers.{{portainer_app_name}}.rule=Host(`{{portainer_app_name}}.{{app_swarm_domain_name}}`)"
        - "traefik.http.services.{{portainer_app_name}}.loadbalancer.server.port={{portainer_target_port}}"
        - "traefik.docker.network={{traefik_network_name}}"
        - "io.portainer.accesscontrol.users=admin"
        - "traefik.http.routers.{{portainer_app_name}}.entrypoints=websecure"
        - "traefik.http.routers.{{portainer_app_name}}.tls=true"
        - "traefik.docker.lbswarm=true" # Disables load-balancing in Traefik and delegates it to Docker Swarm
        - "traefik.http.services.{{portainer_app_name}}.loadbalancer.passhostheader=true"
      mode: replicated
      replicas: 1
      placement:
        constraints: [node.role == manager]

networks:
  {{portainer_network_name}}:
    driver: overlay
    attachable: true
  {{traefik_network_name}}:
    external: true

volumes:
  {{portainer_volume_name}}:
    driver: glusterfs
    name: "gfs/{{portainer_gfs_subdir}}"